<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <script src="https://kit.fontawesome.com/a0f35c0307.js" crossorigin="anonymous"></script>
    <!-- <link rel="stylesheet" href="./css/home.css"> -->
    <script src="/js/home.js" defer></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .card {
            width:300px;
            height:400px
        }
        
    </style>
</head>
<body>
  <%- include('navCustomer') %>

      <div class="h1 d-flex justify-content-center align-items-center m-5">Homepage</div>
    <div class="container-fluid d-flex justify-content-center align-items-center gap-3">
        <p class="countcart h1">0</p>
        <i class="fa-solid fa-cart-shopping fa-4x"></i>
        <form method="get" action="/orderpage">
            <button type="submit" class="btn btn-primary" onclick="order()"> Order</button>
        </form>
    </div>
    <div class="container d-flex flex-wrap justify-content-center align-items-center">
       <% for(data of product){%>
    <div class="card m-2 bg-secondary text-white">
        <!-- //card -->
        <img class="card-img-top" src="/img/products/<%= data.pic %>" alt="Card image">
        <div class="card-body d-flex flex-column justify-content-center align-items-center">
            <input type="hidden" value="<%= data.idproduct %>" class="id">
            <input type="hidden" value="<%= data.total %>" class="maxProduct">
            <p class="h2"><%= data.name %></p>
            <p class="h2 text-warning"><%= data.price %> $</p>
            <button type="button" class="addbtn btn btn-info">addCart</button>
        </div>
    </div>
        <!-- //end card -->
        <% } %>
    </div>
</body>
</html>