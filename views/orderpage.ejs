<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <link rel="stylesheet" href="/css/home.css">
    <script src="/js/home.js" defer></script>
</head>
<body>
    <div class="nav">
        <h1 class="h">M</h1>
        <div class="menu"> 
            <a href="/homeCustomer">Home</a>
            <a href="/logout">Logout</a>
        </div>
    <div class="container">
        <div class="order">
            <% for(data of product){%>
            <div class="item">
                <div class="fname">
                    <h2><%= data.name %></h2>
                    <h2 class="price"><%= data.price %>$</h2>
                    <div class="add">
                        <button type="button" class="plus" onclick="addnum()">+</button>
                        <p class="number">0</p>
                        <button type="button" class="minus" onclick="minusnum()">-</button>
                    </div>
                </div>
                <div class="totalprice">
                    <p class="totalp">0</p>
                    <h1>Totalprice</h1>
                </div>
            </div>
            <% } %>
        </div>
        <form action="/pay" >
        <div class="total">
            <p class="amount">0</p>
            <div class="tatp">Total amount</div>
            <p class="totalmax">0</p>
            <div class="totalPriceleft">Total price</div>
            <p>credit</p>
            <div class="paytype">Payment Type</div>
            <button type="submit" class="pay" onclick="pay()">Payment</button>
        </div>
        </form>
        
    </div>
</body>
</html>