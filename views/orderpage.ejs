<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <!-- <link rel="stylesheet" href="/css/home.css"> -->
    <script src="/js/home.js" defer></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .add button {
            width: 40px;
            height: 40px;
        }

    </style>
</head>
<body>
    <%- include('navCustomer') %>

    <div class="container container-fluid d-flex justify-content-center align-items-center gap-3">
        <div class="order card d-flex flex-column justify-content-center align-items-center bg-secondary text-white mt-3">
            <div class="h1">Your Order</div>
            <% for(data of product){%>
            <div class="item card-body d-flex flex-row justify-content-center align-items-center bg-secondary text-white">
                <div class="fname card-body d-flex flex-column justify-content-center align-items-center">
                    <input type="hidden" class="idproduct" value="<%= data.idproduct %>">
                    <input type="hidden" class="maxProduct" value="<%= data.total %>">
                    <input type="hidden" class="result" value="<%= data.total %>">
                    <h2><%= data.name %></h2>
                    <h2 class="price text-warning"><%= data.price %>$</h2>
                    <div class="add card-body d-flex flex-row justify-content-center align-items-center gap-3">
                        <button type="button" class="plus" onclick="addnum()">+</button>
                        <p class="number h3">0</p>
                        <button type="button" class="minus" onclick="minusnum()">-</button>
                    </div>
                </div>
                <div class="totalprice card-body d-flex flex-column justify-content-center align-items-center">
                    <p class="totalp h3">0</p>
                    <p class="h5">Totalprice</p>
                </div>
            </div>
            <% } %>
        </div>

        <form action="/pay" method="post">
        <div class="total card">
            <div class="card-body d-flex flex-column justify-content-center align-items-center bg-secondary text-white">
                <div class="tatp h5">Total amount</div>
                <p class="amount h3">0</p>
                <div class="totalPriceleft h5">Total price</div>
                <p class="totalmax h3">0</p>
                <div class="paytype h5">Payment Type</div>
                <p>credit</p>
                <button type="submit" class="pay btn btn-primary" onclick="pay()">Click to pay</button>
                <input type="hidden" value="" class="fid" name="fid">
                <input type="hidden" value="" class="famount" name="fnum">
                <input type="hidden" value="" class="fresult" name="fresult">
            </div>
        </div>
        </form>
        
    </div>
</body>
</html>