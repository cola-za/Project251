<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <script src="https://kit.fontawesome.com/a0f35c0307.js" crossorigin="anonymous"></script>
    <!-- <link rel="stylesheet" href="./css/home.css"> -->
    <script src="/js/home.js" defer></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        th {
            font-size: large;
        }

        td {
            font-size: large;
        }
    </style>
</head>
<body>

    <%- include('navNormal') %>
    <div class="h1 d-flex justify-content-center align-items-center m-5">Order</div>
    <div class="container">

      <!-- To do Order -->
        <div class="row" >
            <h2 class="col-sm-12 text-warning">To do order</h>
        <table class="table col-sm-12">
            <thead>
                <tr>
                  <th>Customer ID</th>
                  <th>Product ID</th>
                  <th>Amount</th>
                  <th>Order Datetime</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <% for(data of order){%>
                  <% if(data.status == "wait") {%>
                <tr>
                  <td><%= data.CustomerID %></td>
                  <td><%= data.idproduct %></td>
                  <td><%= data.amount %></td>
                  <td><%= data.date %></td>
                  <td><%= data.status %></td>
                  <td>
                    <form method="post" action="/toSuccess">
                      <input type="hidden" name="CustomerID" value="<%= data.CustomerID %>">
                      <input type="hidden" name="ProductID" value="<%= data.idproduct %>">
                      <button type="submit" class="btnDelete btn btn-success">Finish</button>
                    </form>
                  </td>
                  <td>
                    <form method="post" action="/toCancel">
                      <input type="hidden" name="CustomerID" value="<%= data.CustomerID %>">
                      <input type="hidden" name="ProductID" value="<%= data.idproduct %>">
                      <button type="submit" class="btnDelete btn btn-danger" >Cancel</button>
                    </form></td>
                  </tr>
                  <% } %>
                <% } %>
              </tbody>
        </table>
    </div>
    <!--End To do Order -->

    <!--Succes -->
       <div class="row" >
            <h2 class="col-sm-12 text-success">Success</h>
        <table class="table col-sm-12">
            <thead>
                <tr>
                  <th>Customer ID</th>
                  <th>Product ID</th>
                  <th>Amount</th>
                  <th>Order Datetime</th>
                  <th>Status</th>
                  <th>UserID</th>
                </tr>
              </thead>
              <tbody>
                <% for(data of order){%>
                  <% if(data.status == "success") {%>
                <tr>
                  <td><%= data.CustomerID %></td>
                  <td><%= data.idproduct %></td>
                  <td><%= data.amount %></td>
                  <td><%= data.date %></td>
                  <td><%= data.status %></td>
                  <td><%= data.userID %></td>
                  </tr>
                  <% } %>
                <% } %>
              </tbody>
        </table>
    </div>
    <!--EndSucces -->

    <!--Cancel -->
    <div class="row" >
        <h2 class="col-sm-12 text-danger">Cancel</h>
    <table class="table col-sm-12">
        <thead>
            <tr>
              <th>Customer ID</th>
              <th>Product ID</th>
              <th>Amount</th>
              <th>Order Datetime</th>
              <th>Status</th>
              <th>UserID</th>
            </tr>
          </thead>
          <tbody>
            <% for(data of order){%>
              <% if(data.status == "cancel") {%>
            <tr>
              <td><%= data.CustomerID %></td>
              <td><%= data.idproduct %></td>
              <td><%= data.amount %></td>
              <td><%= data.date %></td>
              <td><%= data.status %></td>
              <td><%= data.userID %></td>
              </tr>
              <% } %>
            <% } %>
          </tbody>
    </table>
</div>
<!--End Cancel -->
       
    </div>
</body>
</html>