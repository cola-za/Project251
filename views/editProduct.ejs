<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <!-- <link rel="stylesheet" href="./css/home.css"> -->
    <script src="/js/home.js" defer></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .card {
            width:300px;
            height:500px
        }

        button{
            margin-top: 3 rem;
        }

    </style>
</head>
<body>

    <%- include('nav') %>
    <div class="h1 d-flex justify-content-center align-items-center m-5">Edit Product</div>
    <div class="container d-flex flex-wrap justify-content-center align-items-center">
       <% for(data of product){%>
        <!-- //end card -->
        <div class="card m-2 bg-secondary text-white">
            <!-- <input type="hidden" value="<%= data.idproduct %>" class="id"> -->
            <!-- <img src="/img/products/<%= data.pic %>"> -->
            <img class="card-img-top" src="/img/products/<%= data.pic %>" alt="Card image">
            <div class="card-body d-flex flex-column justify-content-center align-items-center gap-1">
                <p class="h2"><%= data.name %></p>          
                <p class="h2 text-warning"><%= data.price %> $</p>
                <form method="post" action="/deleteProduct">
                    <input type="hidden" name="id" value="<%= data.idproduct %>">
                    <button type="submit" class="btnDelete btn btn-danger" >Delete</button>
                </form>
                <form method="post" action="/changeProduct">
                    <input type="hidden" name="id" value="<%= data.idproduct %>">
                    <button type="submit" class="btnEdit btn btn-info" >Edit</button>
                </form>
            </div>          
        </div>
            <!-- //end card -->
        <% } %>
    </div>
</body>
</html>