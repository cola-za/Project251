<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <!-- <link rel="stylesheet" href="./css/home.css"> -->
    <script src="/js/home.js" defer></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        label {
            margin: 1rem;
        }

        button {
            margin-top: 1rem;
        }

        form input[type="password"],form input[type="text"] ,form input[type="number"] ,form select{
    width: 310px;
    height: 50px;
    border: 0px solid #dee0e4;
    margin-bottom: 20px;
    padding: 0 15px;
}
        form {
            background-color: #435165;
        }       
    </style>
</head>
<body>
    <%- include('nav') %>
    <div class="h1 d-flex justify-content-center align-items-center m-5">Insert Product</div>
    <div class="container">
        <form method="post" action="/additem" enctype="multipart/form-data" class="d-flex flex-column justify-content-center align-items-center">
            <label for="" class="badge bg-secondary">ID</label>
            <input type="number" name="id" required placeholder="ID">
            <label for="" class="badge bg-secondary">Name</label>
            <input type="text" name="name" required placeholder="Name">
            <label for="" class="badge bg-secondary">Picture</label>
            <input type="file" name="pic">
            <label for="" class="badge bg-secondary">Price</label>
            <input type="number" name="price" required placeholder="Price"> 
            <label for="" class="badge bg-secondary">Total</label>
            <input type="number" name="total" required placeholder="Total"> 
            <button class="btn btn-primary" type="submit" style="margin-bottom: 2rem;">SUBMIT</button>
        </form>
    </div>
</body>
</html>